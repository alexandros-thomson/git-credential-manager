<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <!-- ── Package Sources: the realms that host our relics ── -->
  <packageSources>
    <clear />

    <!-- Official NuGet.org Vault -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />

    <!-- Kypria Sigil Feed (requires credentials) -->
    <add key="kypria-sigil-feed" value="https://artifact.kypria.net/feeds/releases/v1/nuget" />
  </packageSources>

  <!-- ── Private Feed Credentials: env-bound for audit-safe secrets ── -->
  <packageSourceCredentials>
    <kypria-sigil-feed>
      <add key="Username"         value="%KYPRIA_FEED_USER%" />
      <add key="ClearTextPassword" value="%KYPRIA_FEED_KEY%" />
    </kypria-sigil-feed>
  </packageSourceCredentials>

  <!-- ── Auto-Restore: invoke the ritual on every build ── -->
  <packageRestore>
    <enabled>True</enabled>
    <automatic>True</automatic>
  </packageRestore>

  <!-- ── Binding Redirects: prevent version-spell collisions ── -->
  <bindingRedirects>
    <skip>True</skip>
  </bindingRedirects>

  <!-- ── Active Aggregate Source: unify your sources into one sigil ── -->
  <activePackageSource>
    <add key="All" value="(Aggregate source)" />
  </activePackageSource>

</configuration>
